#!/usr/bin/env bash

# Update package lists
sudo pt-get update

# Install Nginx
sudo apt-get install -y nginx

# Stop Nginx service
sudo service nginx stop

# Configure Nginx to run as nginx user
sudo sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Change ownership of Nginx directories to nginx user
chown -R nginx:nginx /var/www/html
chown -R nginx:nginx /var/log/nginx

# Configure Nginx to listen on all active IPs on port 8080
sudo sed -i 's/listen 80;/listen 8080 default_server;/g' /etc/nginx/sites-available/default

# Start Nginx service
sudo service nginx start
